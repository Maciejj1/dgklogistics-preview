<script
    is:inline
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD-oqTpNsrCsxzYPaq5GiuDA0NpSUs4jyI&callback=initMap"
    defer></script>

<script is:inline>
    function initMap() {
        // Współrzędne DGK Logistics (Moerkapelle)
        const dgkLocation = { lat: 52.0465, lng: 4.5823 }; // Współrzędne dla Moerkapelle

        // Tworzenie mapy
        const map = new google.maps.Map(document.getElementById("map"), {
            zoom: 15,
            center: dgkLocation,
            styles: [
                {
                    featureType: "all",
                    elementType: "labels.text.fill",
                    stylers: [{ color: "#4b5563" }],
                },
                {
                    featureType: "all",
                    elementType: "labels.text.stroke",
                    stylers: [{ color: "#f3f4f6" }],
                },
                {
                    featureType: "administrative",
                    elementType: "geometry.stroke",
                    stylers: [{ color: "#d1d5db" }],
                },
                {
                    featureType: "landscape",
                    elementType: "geometry",
                    stylers: [{ color: "#f3f4f6" }],
                },
                {
                    featureType: "poi",
                    elementType: "geometry",
                    stylers: [{ color: "#e5e7eb" }],
                },
                {
                    featureType: "road",
                    elementType: "geometry",
                    stylers: [{ color: "#ffffff" }],
                },
                {
                    featureType: "water",
                    elementType: "geometry",
                    stylers: [{ color: "#bfdbfe" }],
                },
            ],
        });

        // Dodawanie markera
        const marker = new google.maps.Marker({
            position: dgkLocation,
            map: map,
            title: "DGK Logistics",
            animation: google.maps.Animation.DROP,
        });

        // Dodawanie info window
        const infowindow = new google.maps.InfoWindow({
            content: `
                <div style="padding: 8px;">
                    <h3 style="margin: 0 0 8px; font-weight: 600;">DGK Logistics</h3>
                    <p style="margin: 0;">Bredeweg 66b 83<br>2752 AB Moerkapelle<br>Nederland</p>
                </div>
            `,
        });

        // Otwieranie info window po kliknięciu w marker
        marker.addListener("click", () => {
            infowindow.open(map, marker);
        });
    }

    (function () {
        emailjs.init("504pOGaF5i_bk6VB7");
    })();

    function handleSubmit(event) {
        event.preventDefault();

        // Pobierz dane z formularza
        const form = event.target;

        // Get service value and format it nicely
        const serviceValue = form.service.value;
        const serviceMap = {
            transport: "Transport",
            distribution: "Dystrybucja",
            containers: "Kontenery",
            spedition: "Spedycja",
            other: "Inne",
        };

        const templateParams = {
            name: form.name.value.trim() || "Nie podano",
            email: form.email.value.trim() || "Nie podano",
            phone: form.phone.value.trim() || "Nie podano",
            company: form.company.value.trim() || "Nie podano",
            service: serviceMap[serviceValue] || "Nie wybrano",
            message: form.message.value.trim() || "Brak wiadomości",
            time: new Date().toLocaleString("pl-PL", {
                day: "numeric",
                month: "long",
                year: "numeric",
                hour: "2-digit",
                minute: "2-digit",
                hour12: false,
            }),
            subject: `Nowe zapytanie - ${form.name.value.trim() || "Nowy klient"}`,
        };

        // Wyślij e-mail przez EmailJS
        emailjs
            .send("service_ssved6m", "template_8k4nf7m", templateParams)
            .then(
                function (response) {
                    alert("Wiadomość została wysłana!");
                    form.reset();
                },
                function (error) {
                    console.error("FAILED...", error);
                    alert("Wystąpił błąd przy wysyłaniu wiadomości...");
                },
            );
    }
</script>

