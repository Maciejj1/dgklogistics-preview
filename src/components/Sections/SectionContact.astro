---
import { t } from "../../i18n/utils";
const { lang } = Astro.props;
const base = "/dgklogistics-preview";
---

<script
    is:inline
    src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
></script>

<section id="contact" class="bg-white text-primary-700 py-16 px-6 md:px-12">
    <div class="container-custom">
        <!-- Header -->
        <div class="text-center mb-16 fade-in">
            <h2
                class="text-4xl font-bold mb-6 text-center border-b border-text-primary-700 pb-4"
            >
                {t(lang, "contact.title")}
            </h2>
            <p class="text-lg md:text-xl text-primary-700 max-w-3xl mx-auto">
                {t(lang, "contact.subtitle")}
            </p>
        </div>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-2 gap-16 mb-16">
            <!-- Left Column - Contact Form -->
            <div class="animate-on-scroll">
                <div class="premium-card h-full">
                    <h3 class="text-2xl font-semibold text-primary-900 mb-8">
                        {t(lang, "contact.form.title")}
                    </h3>

                    <form
                        id="contactForm"
                        class="space-y-6"
                        onsubmit="handleSubmit(event)"
                    >
                        <!-- Name & Email Row -->
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    class="block text-sm font-medium text-primary-700 mb-2"
                                >
                                    {t(lang, "contact.form.name")}
                                </label>
                                <input
                                    type="text"
                                    name="name"
                                    placeholder={t(
                                        lang,
                                        "contact.form.namePlaceholder",
                                    )}
                                    required
                                    class="form-input"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-primary-700 mb-2"
                                >
                                    {t(lang, "contact.form.email")}
                                </label>
                                <input
                                    type="email"
                                    name="email"
                                    placeholder={t(
                                        lang,
                                        "contact.form.emailPlaceholder",
                                    )}
                                    required
                                    class="form-input"
                                />
                            </div>
                        </div>

                        <!-- Phone & Company Row -->
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    class="block text-sm font-medium text-primary-700 mb-2"
                                >
                                    {t(lang, "contact.form.phone")}
                                </label>
                                <input
                                    type="tel"
                                    name="phone"
                                    placeholder={t(
                                        lang,
                                        "contact.form.phonePlaceholder",
                                    )}
                                    class="form-input"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-primary-700 mb-2"
                                >
                                    {t(lang, "contact.form.company")}
                                </label>
                                <input
                                    type="text"
                                    name="company"
                                    placeholder={t(
                                        lang,
                                        "contact.form.companyPlaceholder",
                                    )}
                                    class="form-input"
                                />
                            </div>
                        </div>

                        <!-- Service Type -->
                        <div>
                            <label
                                class="block text-sm font-medium text-primary-700 mb-2"
                            >
                                {t(lang, "contact.form.service")}
                            </label>
                            <select name="service" class="form-select">
                                <option value=""
                                    >{
                                        t(lang, "contact.form.serviceSelect")
                                    }</option
                                >
                                <option value="transport"
                                    >{
                                        t(lang, "contact.form.serviceTransport")
                                    }</option
                                >
                                <option value="distribution"
                                    >{
                                        t(
                                            lang,
                                            "contact.form.serviceDistribution",
                                        )
                                    }</option
                                >
                                <option value="containers"
                                    >{
                                        t(
                                            lang,
                                            "contact.form.serviceContainers",
                                        )
                                    }</option
                                >
                                <option value="spedition"
                                    >{
                                        t(lang, "contact.form.serviceSpedition")
                                    }</option
                                >
                                <option value="other"
                                    >{
                                        t(lang, "contact.form.serviceOther")
                                    }</option
                                >
                            </select>
                        </div>

                        <!-- Message -->
                        <div>
                            <label
                                class="block text-sm font-medium text-primary-700 mb-2"
                            >
                                {t(lang, "contact.form.message")}
                            </label>
                            <textarea
                                name="message"
                                placeholder={t(
                                    lang,
                                    "contact.form.messagePlaceholder",
                                )}
                                rows="5"
                                required
                                class="form-textarea"></textarea>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="contact-button">
                            {t(lang, "contact.form.submit")}
                        </button>
                    </form>

                    <!-- Quick Action Buttons -->
                    <div
                        class="grid md:grid-cols-2 gap-4 mt-8 pt-8 border-t border-neutral-200"
                    >
                        <a
                            href={`${base}/${lang}#transport`}
                            class="contact-button-secondary"
                        >
                            {t(lang, "contact.buttons.transport")}
                        </a>
                        <a
                            href={`${base}/${lang}#spedition`}
                            class="contact-button"
                        >
                            {t(lang, "contact.buttons.join")}
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Column - Contact Info & Social -->
            <div class="grid gap-8 animate-on-scroll">
                <!-- Contact Details -->
                <div class="premium-card">
