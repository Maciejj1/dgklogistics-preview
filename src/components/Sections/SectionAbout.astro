---
import { t } from "../../i18n/utils";
const { lang } = Astro.props;
---

<section id="about" class="bg-white text-primary-700 py-16 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16 animate-on-scroll">
            <h2
                class="text-4xl font-bold mb-6 text-center border-b border-text-primary-700 pb-4"
            >
                {t(lang, "nav.about")}
            </h2>
            <p class="text-lg md:text-xl text-primary-700 max-w-3xl mx-auto">
                {t(lang, "about.tagline")}
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center mb-16">
            <div class="animate-on-scroll">
                <div class="space-y-8">
                    <div
                        class="bg-white rounded-xl shadow-lg p-8 border border-neutral-200 hover:shadow-xl transition-shadow"
                    >
                        <h3 class="text-2xl font-bold text-primary-900 mb-6">
                            {t(lang, "about.company.title")}
                        </h3>
                        <div class="space-y-4 text-lg text-primary-700">
                            <p>{t(lang, "about.intro1")}</p>
                            <p>{t(lang, "about.intro2")}</p>
                            <p>{t(lang, "about.intro3")}</p>
                        </div>
                    </div>

                    <!-- Values -->
                    <div
                        class="bg-white rounded-xl shadow-lg p-8 border border-neutral-200 hover:shadow-xl transition-shadow"
                    >
                        <h4 class="text-xl font-bold text-primary-900 mb-6">
                            {t(lang, "about.values.title")}
                        </h4>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div
                                class="flex items-center space-x-3 p-4 bg-neutral-50 rounded-lg hover:bg-neutral-100 transition-colors"
                            >
                                <div class="w-2 h-2 bg-accent-500 rounded-full">
                                </div>
                                <span
                                    class="text-base font-medium text-primary-700"
                                >
                                    {t(lang, "about.values.quality")}
                                </span>
                            </div>
                            <div
                                class="flex items-center space-x-3 p-4 bg-neutral-50 rounded-lg hover:bg-neutral-100 transition-colors"
                            >
                                <div class="w-2 h-2 bg-accent-500 rounded-full">
                                </div>
                                <span
                                    class="text-base font-medium text-primary-700"
                                >
                                    {t(lang, "about.values.punctuality")}
                                </span>
                            </div>
                            <div
                                class="flex items-center space-x-3 p-4 bg-neutral-50 rounded-lg hover:bg-neutral-100 transition-colors"
                            >
                                <div class="w-2 h-2 bg-accent-500 rounded-full">
                                </div>
                                <span
                                    class="text-base font-medium text-primary-700"
                                >
                                    {t(lang, "about.values.awareness")}
                                </span>
                            </div>
                            <div
                                class="flex items-center space-x-3 p-4 bg-neutral-50 rounded-lg hover:bg-neutral-100 transition-colors"
                            >
                                <div class="w-2 h-2 bg-accent-500 rounded-full">
                                </div>
                                <span
                                    class="text-base font-medium text-primary-700"
                                >
                                    {t(lang, "about.values.satisfaction")}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="animate-on-scroll">
                <div
                    class="bg-white rounded-xl shadow-lg p-8 border border-neutral-200 hover:shadow-xl transition-shadow"
                >
                    <h4 class="text-2xl font-bold text-primary-900 mb-6">
                        {t(lang, "about.partners.title")}
                    </h4>

                    <div
                        class="mb-6 p-6 bg-blue-50 rounded-xl hover:bg-blue-100 transition-colors"
                    >
                        <div class="flex items-center mb-4">
                            <img
                                src="/companies/ah.png"
                                alt="Albert Heijn"
                                class="w-12 h-12 object-contain rounded-lg mr-4 bg-white"
                            />
                            <div>
                                <h5 class="text-xl font-bold text-primary-900">
                                    {t(lang, "about.partners.ahName")}
                                </h5>
                                <p class="text-primary-600">
                                    {t(lang, "about.partners.ahDescription")}
                                </p>
                            </div>
                        </div>
                        <p class="text-base text-primary-700 leading-relaxed">
                            {t(lang, "about.partners.ah")}
                        </p>
                    </div>

                    <div
                        class="p-6 bg-emerald-50 rounded-xl hover:bg-emerald-100 transition-colors"
                    >
                        <div class="flex items-center mb-4">
                            <img
                                src="/companies/dlg.png"
                                alt={t(lang, "about.partners.dlgName")}
                                class="w-12 h-12 object-contain rounded-lg mr-4 bg-white"
                            />
                            <div>
                                <h5 class="text-xl font-bold text-primary-900">
                                    {t(lang, "about.partners.dlgName")}
                                </h5>
                                <p class="text-primary-600">
                                    {t(lang, "about.partners.dlgDescription")}
                                </p>
                            </div>
                        </div>
                        <p class="text-base text-primary-700 leading-relaxed">
                            {t(lang, "about.partners.dlg")}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div
            class="bg-gradient-to-r from-accent-50 to-accent-100 rounded-xl p-8 md:p-12 mb-16 animate-on-scroll"
        >
            <div class="text-center mb-12">
                <h3 class="text-3xl font-bold text-primary-900 mb-6">
                    {t(lang, "about.distinction.title")}
                </h3>
                <p class="text-lg text-primary-700 max-w-3xl mx-auto">
                    {t(lang, "about.distinction.description")}
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <div
                    class="bg-white/80 backdrop-blur rounded-xl p-6 text-center hover:bg-white transition-colors"
                >
                    <div
                        class="w-16 h-16 bg-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-4"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-xl font-bold text-primary-900 mb-2">
                        {t(lang, "about.distinction.fresh")}
                    </h4>
                    <p class="text-primary-700">
                        {t(lang, "about.distinction.freshDesc")}
                    </p>
                </div>

                <div
                    class="bg-white/80 backdrop-blur rounded-xl p-6 text-center hover:bg-white transition-colors"
                >
                    <div
                        class="w-16 h-16 bg-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-4"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-xl font-bold text-primary-900 mb-2">
                        {t(lang, "about.distinction.modern")}
                    </h4>
                    <p class="text-primary-700">
                        {t(lang, "about.distinction.modernDesc")}
                    </p>
                </div>

                <div
                    class="bg-white/80 backdrop-blur rounded-xl p-6 text-center hover:bg-white transition-colors"
                >
                    <div
                        class="w-16 h-16 bg-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-4"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-xl font-bold text-primary-900 mb-2">
                        {t(lang, "about.distinction.personal")}
                    </h4>
                    <p class="text-primary-700">
                        {t(lang, "about.distinction.personalDesc")}
                    </p>
                </div>
            </div>
        </div>
        <div class="text-center animate-on-scroll">
            <h3 class="text-3xl font-bold text-primary-900 mb-12">
                {t(lang, "about.quotes.title")}
            </h3>
            <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                <div
                    class="bg-white rounded-xl shadow-lg p-8 border border-neutral-200 hover:shadow-xl transition-shadow text-left"
                >
                    <div class="text-4xl text-accent-500 mb-4">"</div>
                    <p
                        class="text-lg italic text-primary-700 mb-6 leading-relaxed"
                    >
                        {t(lang, "about.quotes.client1")}
                    </p>
                    <div class="flex items-center">
                        <img
                            src="/companies/ah.png"
                            alt={t(lang, "about.partners.ahName")}
                            class="w-12 h-12 object-contain rounded-lg mr-4 bg-white"
                        />
                        <div>
                            <p class="text-xl font-bold text-primary-900">
                                {t(lang, "about.quotes.client1Author")}
                            </p>
                            <p class="text-primary-600">
                                {t(lang, "about.partners.ahName")}
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="bg-white rounded-xl shadow-lg p-8 border border-neutral-200 hover:shadow-xl transition-shadow text-left"
                >
                    <div class="text-4xl text-accent-500 mb-4">"</div>
                    <p
                        class="text-lg italic text-primary-700 mb-6 leading-relaxed"
                    >
                        {t(lang, "about.quotes.client2")}
                    </p>
                    <div class="flex items-center">
                        <img
                            src="/companies/dlg.png"
                            alt={t(lang, "about.partners.dlgName")}
                            class="w-12 h-12 object-contain rounded-lg mr-4 bg-white"
                        />
                        <div>
                            <p class="text-xl font-bold text-primary-900">
                                {t(lang, "about.quotes.client2Author")}
                            </p>
                            <p class="text-primary-600">
                                {t(lang, "about.partners.dlgName")}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
