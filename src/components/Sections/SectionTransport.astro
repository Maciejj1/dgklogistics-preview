---
import { t } from "../../i18n/utils";
const { lang } = Astro.props;
const base = "/dgklogistics-preview";
---

<section id="transport" class="bg-white text-primary-700 py-16 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
        <h2
            class="text-4xl font-bold mb-10 text-center border-b border-text-primary-700 pb-4"
        >
            {t(lang, "transport.title")}
        </h2>
        <p class="text-lg md:text-xl text-primary-700 max-w-3xl mx-auto">
            {t(lang, "transport.description")}
        </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="animate-on-scroll">
            <div class="h-80 rounded-2xl overflow-hidden shadow-lg">
                <img
                    src={`${base}/images/image1.jpeg`}
                    alt="Transport chłodniczy"
                    class="w-full h-full object-cover"
                />
            </div>
        </div>

        <div class="animate-on-scroll space-y-8">
            <div>
                <h3
                    class="text-3xl md:text-4xl font-semibold text-primary-900 mb-2"
                >
                    {t(lang, "transport.cold.title")}
                </h3>
                <div class="w-16 h-1 bg-accent-500 mb-4"></div>
            </div>

            <div class="space-y-4 text-base text-primary-700">
                <p>{t(lang, "transport.cold.text1")}</p>
                <p>{t(lang, "transport.cold.text2")}</p>
            </div>

            <div class="bg-neutral-50 rounded-xl p-6">
                <h4 class="text-lg font-semibold text-primary-900 mb-4">
                    {t(lang, "transport.cold.specializations")}
                </h4>
                <ul class="space-y-3">
                    {
                        ["ah", "dlg", "quality"].map((key) => (
                            <li class="flex items-start space-x-3">
                                <svg
                                    class="w-5 h-5 text-accent-500 mt-1"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                                <span class="text-sm text-primary-700">
                                    {t(lang, `transport.cold.list.${key}`)}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="grid lg:grid-cols-2 gap-16 items-center mt-6">
        <div class="order-2 lg:order-1 animate-on-scroll space-y-8">
            <div>
                <h3
                    class="text-3xl md:text-4xl font-semibold text-primary-900 mb-2"
                >
                    {t(lang, "transport.container.title")}
                </h3>
                <div class="w-16 h-1 bg-accent-500 mb-4"></div>
            </div>

            <div class="space-y-4 text-base text-primary-700">
                <p>{t(lang, "transport.container.text1")}</p>
                <p>{t(lang, "transport.container.text2")}</p>
            </div>
            <div class="grid grid-cols-3 gap-6">
                {
                    [
                        {
                            value: "24/7",
                            label: t(
                                lang,
                                "transport.container.stats.availability",
                            ),
                        },
                        {
                            value: "100%",
                            label: t(
                                lang,
                                "transport.container.stats.punctuality",
                            ),
                        },
                        {
                            value: "EU",
                            label: t(
                                lang,
                                "transport.container.stats.standards",
                            ),
                        },
                    ].map((stat) => (
                        <div class="text-center bg-neutral-50 rounded-lg p-4">
                            <div class="text-2xl font-bold text-accent-500 mb-1">
                                {stat.value}
                            </div>
                            <div class="text-xs text-primary-600 uppercase tracking-wide">
                                {stat.label}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
        <div class="order-1 lg:order-2 animate-on-scroll">
            <div class="h-80 rounded-2xl overflow-hidden shadow-lg">
                <img
                    src={`${base}/images/image12.jpeg`}
                    alt="Transport kontenerów"
                    class="w-full h-full object-cover"
                />
            </div>
        </div>
    </div>
    <div
        class="animate-on-scroll bg-gradient-to-r from-primary-900 to-primary-800 rounded-3xl p-12 text-center text-white mt-6"
    >
        <h3 class="text-3xl md:text-4xl font-bold mb-6">
            {t(lang, "transport.cta.title")}
        </h3>
        <p class="text-lg md:text-xl text-white/90 mb-8 max-w-2xl mx-auto">
            {t(lang, "transport.cta.text")}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
                href={`/${lang}#contact`}
                class="px-6 py-3 rounded-2xl text-white bg-accent-500 hover:bg-accent-600 transition-colors duration-300 shadow-md text-base font-semibold"
            >
                {t(lang, "transport.cta.contact")}
            </a>
            <a
                href="tel:+31201234567"
                class="px-6 py-3 rounded-2xl border border-white text-white hover:bg-white hover:text-primary-900 transition-colors duration-300 shadow-md text-base font-semibold"
            >
                {t(lang, "transport.cta.call")}
            </a>
        </div>
    </div>
</section>
