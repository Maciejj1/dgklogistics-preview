---
const { lang } = Astro.props;
import { t } from "../i18n/utils";
const base = "/dgklogistics-preview";
---

<footer class="bg-primary-900 text-white">
    <div class="container-custom">
        <!-- Main Footer Content -->
        <div class="py-16 px-6 md:px-12">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
                <!-- Company Information -->
                <div class="lg:col-span-2">
                    <div class="mb-8">
                        <img
                            src={`${base}/logo_transparent.png`}
                            alt="DGK Logistics"
                            class="h-12 w-auto mb-4"
                        />
                        <h3 class="text-xl font-bold text-white mb-4">
                            {t(lang, "footer.company")}
                        </h3>
                        <p class="text-neutral-300 leading-relaxed max-w-md">
                            {t(lang, "footer.about.description")}
                        </p>
                    </div>

                    <!-- Contact Details -->
                    <div class="space-y-3">
                        <div class="flex items-center space-x-3">
                            <svg
                                class="w-4 h-4 text-accent-500 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <div class="text-sm">
                                <p class="text-white font-medium">
                                    {t(lang, "footer.address")}:
                                </p>
                                <p class="text-neutral-300">
                                    {t(lang, "footer.addressValue")}
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center space-x-3">
                            <svg
                                class="w-4 h-4 text-accent-500 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path>
                            </svg>
                            <div class="text-sm">
                                <p class="text-white font-medium">
                                    {t(lang, "footer.phone")}:
                                </p>
                                <a
                                    href="tel:+31201234567"
                                    class="text-accent-400 hover:text-accent-300 transition-colors"
                                >
                                    {t(lang, "footer.phoneValue")}
                                </a>
                            </div>
                        </div>

                        <div class="flex items-center space-x-3">
                            <svg
                                class="w-4 h-4 text-accent-500 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                            <div class="text-sm">
                                <p class="text-white font-medium">
                                    {t(lang, "footer.email")}:
                                </p>
                                <a
                                    href="mailto:office@dgklogistics.nl"
                                    class="text-accent-400 hover:text-accent-300 transition-colors"
                                >
                                    {t(lang, "footer.emailValue")}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold text-white mb-6">
                        {t(lang, "footer.links.title")}
                    </h4>
                    <ul class="space-y-3">
                        <li>
                            <a
                                href={`${base}/${lang}`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "nav.home")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#transport`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "nav.transport")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#spedition`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "nav.spedition")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#about`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "nav.about")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#gallery`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "nav.gallery")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#contact`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "nav.contact")}
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Services -->
                <div>
                    <h4 class="text-lg font-semibold text-white mb-6">
                        {t(lang, "footer.services.title")}
                    </h4>
                    <ul class="space-y-3">
                        <li>
                            <a
                                href={`${base}/${lang}#transport`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "footer.services.refrigerated")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#containers`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "footer.services.containers")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#spedition`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                {t(lang, "footer.services.spedition")}
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}#media`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                Media
                            </a>
                        </li>
                        <li>
                            <a
                                href={`${base}/${lang}/blog`}
                                class="text-neutral-300 hover:text-accent-400 transition-colors text-sm"
                            >
                                Blog
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Social Media & Bottom Bar -->
        <div class="border-t border-neutral-700 py-4 px-6 md:px-12">
            <div
                class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0"
            >
                <!-- Social Media -->
                <div class="flex items-center space-x-6">
                    <span class="text-sm text-neutral-400 font-medium">
                        {t(lang, "contact.social.title")}:
                    </span>
                    <div class="flex space-x-4">
                        <a
                            href="https://linkedin.com/company/dgklogistics"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="w-8 h-8 bg-neutral-700 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-colors"
                            aria-label="LinkedIn"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://facebook.com/dgklogistics"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="w-8 h-8 bg-neutral-700 hover:bg-blue-500 rounded-lg flex items-center justify-center transition-colors"
                            aria-label="Facebook"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://instagram.com/dgklogistics"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="w-8 h-8 bg-neutral-700 hover:bg-pink-500 rounded-lg flex items-center justify-center transition-colors"
                            aria-label="Instagram"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.265-.058 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Copyright & Legal -->
                <div
                    class="flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-6 text-sm text-neutral-400"
                >
                    <p>
                        © 2025 {t(lang, "footer.company")} - {
                            t(lang, "footer.rights")
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
